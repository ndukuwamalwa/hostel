<form action="<%=action%>" method="<%=method %>">
    <div>
        <h4><%=formTitle %></h4>
        <p>All fields marked <span class="required">*</span> are mandatory</p>
    </div>
    <% if (errors.type.toString() === "success") { %>
        <div class="errors success"><%=errors.message%></div>
    <% } else { %>
        <div class="errors err"><%=errors.message%></div>
    <% } %>
    <fieldset>
        <label for="id">Booking ID</label>
        <input type="text" required name="id" autocomplete="off" id="id" value="<%=id%>" readonly>
    </fieldset>
    <fieldset>
        <label for="amount">Amount</label>
        <input type="text" required name="amount" autocomplete="off" pattern="[0-9]{1,}" id="amount">
    </fieldset>
    <fieldset>
        <input type="reset" value="reset">
        <input type="submit" value="submit">
    </fieldset>
</form>