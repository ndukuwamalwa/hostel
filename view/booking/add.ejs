<form action="<%=action%>" method="<%=method %>">
    <div>
        <h4><%=formTitle %></h4>
        <p>All fields marked <span class="required">*</span> are mandatory</p>
    </div>
    <% if (errors.type.toString() === "success") { %>
        <div class="errors success"><%=errors.message%></div>
    <% } else { %>
        <div class="errors err"><%=errors.message%></div>
    <% } %>
    <fieldset>
        <label for="resident">Resident Registration number</label>
        <input type="text" required name="resident" autocomplete="off" autofocus id="resident" value="<%=booking.resident%>">
    </fieldset>
    <fieldset>
        <label for="room">Room</label>
        <select name="room" id="room">
            <% for (let room of rooms) { %>
                <option value="<%=room.roomNo%>"><%=room.roomNo%>(<%=room.title%>)-
                    (Maximum occupants: <%=room.capacity%>)</option>
            <% } %>
        </select>
    </fieldset>
    <fieldset>
        <label for="occupants">Number of occupants</label>
        <input type="text" required name="occupants" autocomplete="off" id="occupants" value="<%=booking.occupants%>">
    </fieldset>
    <fieldset>
        <label for="paid">Booking amount</label>
        <input type="text" required name="paid" autocomplete="off" pattern="[0-9]{1,}" id="paid" value="<%=booking.paid%>">
    </fieldset>
    <fieldset>
        <label for="year">Year</label>
        <input type="text" required name="year" autocomplete="off" pattern="[0-9]{1,}" id="year" value="<%=booking.year%>">
    </fieldset>
    <fieldset>
        <label for="startMonth">From</label>
        <select name="startMonth" id="startMonth">
            <option value="Jan">January</option>
            <option value="Feb">February</option>
            <option value="Mar">March</option>
            <option value="Apr">April</option>
            <option value="May">May</option>
            <option value="Jun">June</option>
            <option value="Jul">July</option>
            <option value="Aug">August</option>
            <option value="Sep">September</option>
            <option value="Oct">October</option>
            <option value="Nov">November</option>
            <option value="Dec">Decemeber</option>
        </select>
    </fieldset>
    <fieldset>
        <label for="endMonth">To</label>
        <select name="endMonth" id="endMonth">
            <option value="Jan">January</option>
            <option value="Feb">February</option>
            <option value="Mar">March</option>
            <option value="Apr">April</option>
            <option value="May">May</option>
            <option value="Jun">June</option>
            <option value="Jul">July</option>
            <option value="Aug">August</option>
            <option value="Sep">September</option>
            <option value="Oct">October</option>
            <option value="Nov">November</option>
            <option value="Dec">Decemeber</option>
        </select>
    </fieldset>
    <fieldset>
        <input type="reset" value="reset">
        <input type="submit" value="submit">
    </fieldset>
</form>