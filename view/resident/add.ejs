<form action="<%=action%>" method="<%=method %>">
    <div>
        <h4><%=formTitle %></h4>
        <p>All fields marked <span class="required">*</span> are mandatory</p>
    </div>
    <% if (errors.type.toString() === "success") { %>
        <div class="errors success"><%=errors.message%></div>
    <% } else { %>
        <div class="errors err"><%=errors.message%></div>
    <% } %>
    <fieldset>
        <label for="admNo">Registration number <span class="required">*</span></label>
        <input type="text" name="admNo" id="admNo" required autocomplete="off" autofocus value="<%=resident.admNo%>" 
        <% if (action === "/residents/update") { %> readonly <% }%>>
    </fieldset>
    <fieldset>
        <label for="fname">First name <span class="required">*</span></label>
        <input type="text" name="fname" id="fname" required autocomplete="off" value="<%=resident.fname%>">
    </fieldset>
    <fieldset>
        <label for="lname">Last name <span class="required">*</span></label>
        <input type="text" name="lname" id="lname" required autocomplete="off" value="<%=resident.lname%>">
    </fieldset>
    <fieldset>
        <label for="othernames">Other name(s)</label>
        <input type="text" name="othernames" id="othernames" autocomplete="off" value="<%=resident.othernames%>">
    </fieldset>
    <fieldset>
        <label for="phone">Phone number <span class="required">*</span></label>
        <input type="text" name="phone" id="phone" required autocomplete="off" value="<%=resident.phone%>">
    </fieldset>
    <fieldset>
        <label for="parentPhone">Parent's phone number <span class="required">*</span></label>
        <input type="text" name="parentPhone" id="parentPhone" required autocomplete="off" value="<%=resident.parentPhone%>">
    </fieldset>
    <fieldset>
        <label for="nationalId">National ID <span class="required">*</span></label>
        <input type="text" name="nationalId" id="nationalId" required autocomplete="off" value="<%=resident.nationalId%>">
    </fieldset>
    <fieldset>
        <input type="reset" value="reset">
        <input type="submit" value="submit">
    </fieldset>
</form>